@model Customer
@{
    
}
<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />
            <div class="form-group">
                <label>Tên khách hàng</label>
                <input type="text" class="form-control " name="@nameof(Model.CustomerName)" value="@Model.CustomerName" autofocus/>
                @Html.ValidationMessage(nameof(Model.CustomerName))
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName))
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
            </div>
            <div class="form-group">
                <label>Email :</label>
                <input type="text" class="form-control" name="@nameof(Model.Email)" value="@Model.Email">
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address">
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
               @*  <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">-- Chọn tỉnh thành</option>
                    @foreach(var province in CommonDataService.ListofProvinces())
                    {
                        if(province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>@province.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">@province.ProvinceName</option>
                        }
                    }
                   
                </select> *@ 
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m=>m.Province) 
            </div>
            <div class="form-group">
                <label>Trạng thái</label>
                <select class="form-control" name="@nameof(Model.IsLocked)">
                    @if (Model.IsLocked)
                    {
                        <option value="false">Khách hàng không bị khoá</option>
                        <option value="true" selected>Khách hàng  bị khoá</option>
                    }
                    else

                    {
                        <option value="false">Khách hàng không bị khoá</option>
                        <option value="true" selected>Khách hàng  bị khoá</option>
                    }
                 
                </select>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save "></i>
                    Lưu giữ liệu
                </button>

                <a href="~/Customer" class="btn btn-primary">
                    <i class="fa fa-chevron-left"></i> Quay lại
                </a>
        </form>
    </div>
</div>
