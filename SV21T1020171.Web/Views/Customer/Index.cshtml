@model SV21T1020171.Web.Models.CustomerSearchResult

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các khách hàng";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Customer" method="get">
        <div class="input-group">
            <input name="searchValue" value="@Model.SearchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên khách hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Customer/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div>
        <table class="table table-bordered table-hover table-striped ">
    <thead>
        <tr class="bg-primary">
            <th>
                Tên khách hàng
            </th>
            <th>
                Tên giao dịch
            </th>
                    <th>
                        Điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Địa chỉ
                    </th>
            <th>
                Tỉnh/Thành
            </th>
            <th>
               Bị Khoá?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var customer in Model.Data)
            {
                <tr>
                    
                    <td>@customer.CustomerName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Province</td>
                    <td>@customer.Address</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Email</td>
                    <td>@customer.IsLocked</td>
                    <td class="text-right">
                        <a href="~/Customer/Edit/@customer.CustomerID " class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i></a>
                            <a href="~/Customer/Delete/@customer.CustomerID " class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                    </td>
                </tr>
            }
               
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
                @for(int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active">
                            <a href="#">@p</a>
                        </li>
                    }
                    else
                    {
                        <li> <a href="~/Customer?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                    }
                }
            </ul>
</div>
</div>
   
