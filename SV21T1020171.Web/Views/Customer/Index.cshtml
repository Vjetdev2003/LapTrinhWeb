@model IEnumerable<SV21T1020171.DomainModels.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các khách hàng";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Customer" method="get">
        <div class="input-group">
            <input name="searchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên khách hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Customer/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@ViewBag.ToTalCustomers</strong> khách hàng trong tổng số <strong>@ViewBag.TotalPages</strong> trang</p>
<div>
        <table class="table table-bordered table-hover table-striped ">
    <thead>
        <tr class="bg-primary">
           
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLocked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    
                    <td>@customer.CustomerName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Province</td>
                    <td>@customer.Address</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Email</td>
                    <td>@customer.IsLocked</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@customer.CustomerID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
               
    </tbody>
</table>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">0</a></li>
            </ul>
        </div>
</div>
    <script>
        var total = @ViewBag.TotalPages
                    const ulElement = document.querySelector('.pagination');

        for (let i = 1; i <= total; i++) {
            const liElement = document.createElement('li');
            const aElement = document.createElement('a');
            aElement.href = "#";
            aElement.textContent = i;

            liElement.appendChild(aElement);
            ulElement.appendChild(liElement);
        }
    </script>
