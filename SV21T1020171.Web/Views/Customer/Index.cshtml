@model IEnumerable<SV21T1020171.DomainModels.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các khách hàng";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Customer" method="get">
        <div class="input-group">
            <input name="searchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên khách hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Customer/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@ViewBag.RowCount</strong> khách hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang</p>
<div>
        <table class="table table-bordered table-hover table-striped ">
    <thead>
        <tr class="bg-primary">
           
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLocked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    
                    <td>@customer.CustomerName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Province</td>
                    <td>@customer.Address</td>
                    <td>@customer.Phone</td>
                    <td>@customer.Email</td>
                    <td>@customer.IsLocked</td>
                    <td class="text-right">
                        <a href="~/Customer/Edit/@customer.CustomerID " class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i></a>
                            <a href="~/Customer/Delete/@customer.CustomerID " class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                    </td>
                </tr>
            }
               
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
                @for(int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active">
                            <a href="#">@p</a>
                        </li>
                    }
                    else
                    {
                        <li> <a href="~/Customer?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
</div>
</div>
   
