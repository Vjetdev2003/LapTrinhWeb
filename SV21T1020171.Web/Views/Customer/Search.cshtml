@model CustomerSearchResult
@{
    Layout = null;
}
<div class="container ">
 <p >Có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
</div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-lg">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Tên khách hàng</th>
                    <th>Tỉnh/Thành</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CustomerName</td>
                        <td>@item.Province</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td class="text-end">
                            <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-info btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-danger btn-sm ms-2">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.PageCount > 1)
    {
        <div class="text-center mt-4">
            <ul class="pagination justify-content-center">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link" href="javascript:;" onclick="paginationSearch('#formSearch', @p)">
                            @p
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
