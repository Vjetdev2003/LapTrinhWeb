@model SV21T1020171.DomainModels.Category

@{
    ViewBag.Title = "Chi tiết loại hàng";
}

<style>
    .centered-container {
        display: flex;
        /* justify-content: center; */ /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        /* min-height: 100vh;  */ /* Chiều cao tối thiểu của container bằng chiều cao của viewport */
    }

    .card {
        width: 100%; /* Chiếm toàn bộ chiều rộng của container */
        max-width: 600px; /* Chiều rộng tối đa của card */
    }

    .table-container {
        overflow-x: auto; /* Cho phép cuộn ngang nếu bảng quá rộng */
    }

    table {
        width: 100%; /* Chiếm toàn bộ chiều rộng của container */
        border-collapse: collapse; /* Gộp các đường viền bảng lại với nhau */
    }

    th, td {
        padding: 8px 12px; /* Khoảng đệm trong các ô bảng */
        border: 1px solid #ddd; /* Đường viền của các ô bảng */
    }

    th {
        background-color: #f8f9fa; /* Màu nền cho các tiêu đề cột */
        font-weight: bold; /* Chữ đậm cho các tiêu đề cột */
        text-align: left; /* Căn trái cho các tiêu đề cột */
    }
</style>

<div class="centered-container">
    <div class="card shadow-lg border-light">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="card-title mb-0">Chi Tiết Loại Hàng</h2>
        </div>
        <div class="card-body table-container">
            <table>
                <thead>
                    <tr>
                        <th>Thông Tin</th>
                        <th>Chi Tiết</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>ID Loại Hàng</td>
                        <td>@Model.CategoryId</td>
                    </tr>
                    <tr>
                        <td>Tên Loại Hàng</td>
                        <td>@Model.CategoryName </td>
                    </tr>
                    <tr>
                        <td>Mô tả</td>
                        <td>@Model.Description</td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
        </div>
    </div>
</div>
