@model IEnumerable<SV21T1020171.DomainModels.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các loại hàng";
}
<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Category" method="get">
        <div class="input-group">
            <input name="searchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập vào tên loại hàng"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@ViewBag.TotalCategories</strong> mặt hàng trong tổng số <strong>@ViewBag.TotalPages</strong> trang</p>
<div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
 
    <tbody>
            @foreach( var categories in Model)
            {<tr>
        
                <td>@categories.CategoryName</td>
                <td>@categories.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@categories.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@categories.CategoryId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@categories.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            }
        </tbody>
        </table>
</div>
    <div class="text-center">
        <ul class="pagination">
            <li ><a href="#">1</a></li>
        </ul>
    </div>
