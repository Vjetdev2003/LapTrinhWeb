@model OrderSearchResult
@{
    Layout = null;
}
<p style="margin:10px 0 10px 0">
    Có <strong>@Model.RowCount</strong> đơn hàng trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Khách hàng</th>
                <th>Ngày lập</th>
                <th>Nhân viên phụ trách</th>
                <th>Thời điểm duyệt</th>
                <th>Người giao hàng</th>
                <th>Ngày nhận giao hàng</th>
                <th>Thời điểm kết thúc</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Data)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.OrderTime</td>
                    <td >@order.CustomerContactName</td>
                    <td >@order.AcceptTime</td>
                    <td >@order.ShipperName</td>
                    <td >@order.ShippedTime</td>
                    <td >@order.FinishedTime</td>
                    <td>@order.StatusDescription</td>
                

                    <td class="text-right">
                        <a href="~/Order/Details/@order.OrderID" class="btn btn-xs btn-info" style="margin-right: 5px;">
                            <i class="fa-info-circle"></i>
                        </a>
                        <a href="~/Order/EditDetail/@order.OrderID" class="btn btn-xs btn-info" style="margin-right: 5px;">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Order/Delete/@order.OrderID" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (Model.PageCount > 1)
{
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                }
            }
        </ul>
    </div>
}