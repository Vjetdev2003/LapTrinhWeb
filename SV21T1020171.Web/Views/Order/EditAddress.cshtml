@model SV21T1020171.DomainModels.Order
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <table class="table table-bordered table-hover table-striped">
        @if (Model != null)
        {
            <form id="formEditAddress" action="~/Order/UpdateAddress" method="post" class="form-horizontal">
                <input type="hidden" name="@nameof(Model.OrderID)" value="@Model.OrderID" />

                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-white">Cập nhật địa chỉ giao hàng</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Địa chỉ:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="@nameof(Model.DeliveryAddress)" value="@Model.DeliveryAddress" placeholder="Nhập địa chỉ giao hàng" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Tỉnh thành:</label>
                        <div class="col-sm-9">
                            @Html.DropDownListFor(m => m.DeliveryProvince, SelectListHelper.Provinces(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <span id="errorEditAdressMessage" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i> Cập nhật
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Bỏ qua
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="modal-header bg-warning">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-white">Thông báo</h4>
            </div>
            <div class="modal-body">
                <p class="text-warning text-center">Yêu cầu không hợp lệ!</p>
            </div>
        }
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {

        $("#formEditAddress").submit(function (e) {

            e.preventDefault();

            var url = $(this).prop("action");
            var method = $(this).prop("method");

            var postData = $(this).serializeArray();

            $.ajax({
                url: url,
                type: method,
                data: postData,
                error: function () {
                    alert("Yêu cầu của bạn không hợp lệ!");
                },
                success: function (data) {

                    if (data !== "") {
                        $("#errorEditAdressMessage").html(data);
                    } else {
                        location.reload();
                    }
                }
            });

            return;

        });
    });
</script>
