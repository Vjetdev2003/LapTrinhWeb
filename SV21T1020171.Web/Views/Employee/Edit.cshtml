@model Employee

<div class="box box-primary">
    <div class="box-body">
        @using (Html.BeginForm("Save", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", autofocus = "autofocus" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.BirthDate, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", type = "text" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Trạng Thái:</label>
                <div class="col-sm-10">
                    <div class="checkbox">
                        @Html.RadioButtonFor(m => m.IsWorking, false, new { @class = "radio-inline", id = "notWorking" }) Đã nghỉ làm
                        @Html.RadioButtonFor(m => m.IsWorking, true, new { @class = "radio-inline", id = "working" }) Đang làm việc
                    </div>
                </div>
            </div>

            <input type="hidden" name="ExistingPhoto" value="@Model.Photo" />

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    <input type="hidden" name="PhotoPath" value="@Model.Photo" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employee/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        }
    </div>
</div>
