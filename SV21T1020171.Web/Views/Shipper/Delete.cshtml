@model Shipper
@{
    ViewBag.Title = "Xóa bên giao hàng";
}
<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên bên giao hàng</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label>Điện Thoại</label>
                <p class="form-control-static">@Model.Phone</p>

            </div>


            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        Xóa dữ liệu
                    </button>
                }
                else
                {
                    <span style="color: red">Không được phép xóa bên giao hàng này </span>
                }


                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>