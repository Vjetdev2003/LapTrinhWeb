@model IEnumerable<SV21T1020171.DomainModels.Shipper>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin người giao hàng";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Shipper" method="get">
        <div class="input-group">
            <input name="searchValue">
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên khách hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <h>Có <strong>@ViewBag.TotalShippers</strong> người giao hàng trong tổng số <strong>@ViewBag.TotalPages</strong> trang</h>
  <div> 
    <table class="table table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
               
                <th>
                    @Html.DisplayNameFor(model => model.ShipperName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    Actions
                </th>
                   
            </tr>
        </thead>
        <tbody>
            @foreach (var shipper in Model)
            {
                <tr >
                   
                    <td>@shipper.ShipperName</td>
                    <td>@shipper.Phone</td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@shipper.ShipperID" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@shipper.ShipperID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@shipper.ShipperID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
            </ul>
        </div>
    </div>
    <script>
        var total = @ViewBag.TotalPages
                            const ulElement = document.querySelector('.pagination');
        if (total > 1) {
        for (let i = 1; i <= total; i++) {
            const liElement = document.createElement('li');
            const aElement = document.createElement('a');
            aElement.href = "#";
            aElement.textContent = i;

            liElement.appendChild(aElement);
            ulElement.appendChild(liElement);
        }else{
                <li><a href="#" > 1 < /a></li >
        }
        }
    </script>
