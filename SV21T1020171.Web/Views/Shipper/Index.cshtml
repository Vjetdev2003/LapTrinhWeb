@model IEnumerable<SV21T1020171.DomainModels.Shipper>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các bên giao hàng";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Shipper" method="get">
        <div class="input-group">
            <input name="searchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên giao hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Shipper/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@ViewBag.RowCount</strong> giao hàng trong tổng số <strong>@ViewBag.PageCount</strong> trang</p>
    <div>
        <table class="table table-bordered table-hover table-striped ">
            <thead>
                <tr class="bg-primary">

                    <th>
                        @Html.DisplayNameFor(model => model.ShipperName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipper in Model)
                {
                    <tr>

                        <td>@shipper.ShipperName</td>
                        <td>@shipper.Phone</td>
                        
                        <td class="text-right">
                            <a href="~/Shipper/Edit/@shipper.ShipperID " class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete/@shipper.ShipperID " class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active">
                            <a href="#">@p</a>
                        </li>
                    }
                    else
                    {
                        <li> <a href="~/Customer?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>
    </div>

