@model Shipper
@{
    
}
<div class="box box-primary">
    <div class="box box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên giao hàng</label>
                <input type="text" class="form-control " name="@nameof(Model.ShipperName)" value="@Model.ShipperName">
                 @Html.ValidationMessage(nameof(Model.ShipperName))      
                </div>
            <div class="form-group">
                <label> Điện Thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone">
                
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save "></i>
                    Lưu giữ liệu
                </button>

                <a href="~/Shipper" class="btn btn-primary">
                    <i class="fa fa-chevron-left"></i> Quay lại
                </a>
        </form>
    </div>
</div>
