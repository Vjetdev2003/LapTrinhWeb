@model SV21T1020171.DomainModels.Supplier

@{
    ViewBag.Title = "Xoá thông tin nhà cung cấp";
}

<style>
    .centered-container {
        display: flex;
       /*  justify-content: center; /* Căn giữa theo chiều ngang */
        /* align-items: center; /* Căn giữa theo chiều dọc */
      /*   min-height: 100vh; */  */ *//* Chiều cao tối thiểu của container bằng chiều cao của viewport */
    }

    .card {
        width: 100%; /* Chiếm toàn bộ chiều rộng của container */
        max-width: 600px; /* Chiều rộng tối đa của card */
    }

    .table-container {
        overflow-x: auto; /* Cho phép cuộn ngang nếu bảng quá rộng */
    }

    table {
        width: 100%; /* Chiếm toàn bộ chiều rộng của container */
        border-collapse: collapse; /* Gộp các đường viền bảng lại với nhau */
    }

    th, td {
        padding: 8px 12px; /* Khoảng đệm trong các ô bảng */
        border: 1px solid #ddd; /* Đường viền của các ô bảng */
    }

    th {
        background-color: #f8f9fa; /* Màu nền cho các tiêu đề cột */
        font-weight: bold; /* Chữ đậm cho các tiêu đề cột */
        text-align: left; /* Căn trái cho các tiêu đề cột */
    }
</style>

<div class="centered-container">
    <div class="card shadow-lg border-light">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="card-title mb-0">Xác nhận xoá</h2>
        </div>
        <div class="card-body table-container">
            <p>Bạn có muốn xoá thông tin của nhà cung cấp không?</p>
            <table>
                <thead>
                    <tr>
                        <th>Thông Tin</th>
                        <th>Chi Tiết</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>ID Nhà Cung Cấp</td>
                        <td>@Model.SupplierID</td>
                    </tr>
                    <tr>
                        <td>Tên Nhà Cung Cấp</td>
                        <td>@Model.SupplierName</td>
                    </tr>
                    <tr>
                        <td>Tên Người Liên Hệ</td>
                        <td>@Model.ContactName</td>
                    </tr>
                    <tr>
                        <td>Cung Cấp</td>
                        <td>@Model.Provice</td>
                    </tr>
                    <tr>
                        <td>Địa Chỉ</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>Điện Thoại</td>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.SupplierID" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
