@model SupplierSearchResult
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div>
    <table class="table table-bordered table-hover table-striped ">
        <thead>
            <tr class="bg-primary">

                <th>
                    Ảnh nhà cung cấp
                </th>
                <th>
                    Tên nhà cung cấp
                </th>
                <th>
                    Thông tin liên hệ
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Email
                </th>
                <th>
                    Điện thoại
                </th>
                <th>
                    Tỉnh/Thành
                </th>
                    
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <img class="profile-user-img img-responsive img-bordered"
                                 alt="no-photo"
                                 src="~/images/Supplier/@(string.IsNullOrWhiteSpace(item.Logo) ? "nophoto.png" : item.Logo)">
                        </td>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Province</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td class="text-right">
                            <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            }



        </tbody>
    </table>

    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    } 
</div>