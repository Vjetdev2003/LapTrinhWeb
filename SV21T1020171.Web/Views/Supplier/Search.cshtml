@model SupplierSearchResult
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div>
    <table class="table table-bordered table-hover table-striped ">
        <thead>
            <tr class="bg-primary">

                <th>
                    Tên nhà cung cấp
                </th>
                <th>
                    Thông tin liên hệ
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Email
                </th>
                <th>
                    Điện thoại
                </th>
                <th>
                    Tỉnh/Thành
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model.Data)
            {
                <tr>

                    <td>@supplier.SupplierName</td>
                    <td>@supplier.ContactName</td>
                    <td>@supplier.Address</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Province</td>

                    <td class="text-right">
                        <a href="~/Supplier/Edit/@supplier.SupplierID " class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Supplier/Delete/@supplier.SupplierID " class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="paginationSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            </ul>
        </div>
    } 
</div>