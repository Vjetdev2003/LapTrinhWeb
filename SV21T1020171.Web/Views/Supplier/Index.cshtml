@model SV21T1020171.Web.Models.SupplierSearchResult

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin các nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Supplier" method="get">
        <div class="input-group">
            <input name="searchValue" 
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên nhà cung cấp cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang</p>
    <div>
        <table class="table table-bordered table-hover table-striped ">
            <thead>
                <tr class="bg-primary">

                    <th>
                        Tên nhà cung cấp
                    </th>
                    <th>
                       Thông tin liên hệ
                    </th>
                    <th>
                       Địa chỉ
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Điện thoại
                    </th>
                    <th>
                        Tỉnh/Thành
                    </th>
                   
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model.Data)
                {
                    <tr>

                        <td>@supplier.SupplierName</td>
                        <td>@supplier.ContactName</td>
                        <td>@supplier.Address</td>
                        <td>@supplier.Email</td>
                        <td>@supplier.Phone</td>
                        <td>@supplier.Province</td>
                       
                        <td class="text-right">
                            <a href="~/Supplier/Edit/@supplier.SupplierID " class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Supplier/Delete/@supplier.SupplierID " class="btn btn-xs btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active">
                            <a href="#">@p</a>
                        </li>
                    }
                    else
                    {
                        <li> <a href="~/Supplier?page=@p&searchValue=@Model.SearchValue"></a></li>
                    }
                }
            </ul>
        </div>
    </div>

