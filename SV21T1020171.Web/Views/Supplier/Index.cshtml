@model IEnumerable<SV21T1020171.DomainModels.Supplier>

@{
    ViewBag.Title = "Supplier List";
}
<div class="box box-primary">
    <div class="box-body"></div>
    <!--Form nhập đầu vào tìm kiếm -->

    <form id="formSearch" action="~/Supplier/" method="get">
        <div class="input-group">
            <input name="searchValue"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên người giao hàng cần tìm"
                   autofocus />
            <div class="input-group-btn">
                <button class="btn btn-info" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                    <i class="fa fa-plus"> Bổ sung</i>
                </a>
            </div>
        </div>
    </form>
    <p>Có <strong>@ViewBag.TotalSuppliers</strong> nhà cung cấp trong tổng số <strong>@ViewBag.TotalPages</strong> trang</p>

<div>
    <table class="table table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        
                        <th>Name</th>
                        <th>Contact Name</th>
                        <th>Provide</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>                       
                            <td>@supplier.SupplierName</td>
                            <td>@supplier.ContactName</td>
                            <td>@supplier.Provice</td>
                            <td>@supplier.Address</td>
                            <td>@supplier.Phone</td>
                            <td>@supplier.Email</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@supplier.SupplierID" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@supplier.SupplierID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@supplier.SupplierID" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    const totalPages = 1; // Số lượng trang bạn muốn hiển thị
    var total = @ViewBag.TotalPages
                const ulElement = document.querySelector('.pagination');

    for (let i = 1; i <= totalPages; i++) {
        const liElement = document.createElement('li');
        const aElement = document.createElement('a');
        aElement.href = "#";
        aElement.textContent = i;

        liElement.appendChild(aElement);
        ulElement.appendChild(liElement);
    }
</script>   