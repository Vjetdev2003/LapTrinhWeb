@model Product

@{
    ViewBag.Title = Model.ProductID == 0 ? "Thêm mới sản phẩm" : "Chỉnh sửa sản phẩm";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Product/SaveProduct" enctype="multipart/form-data" method="post">
            <input type="hidden" value="@Model.ProductID" name="@nameof(Model.ProductID)" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus name="@nameof(Model.ProductName)" value="@Model.ProductName">
                    @Html.ValidationMessage(nameof(Model.ProductName))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" name="@nameof(Model.ProductDescription)">@Model.ProductDescription</textarea>
                    @Html.ValidationMessage(nameof(Model.ProductDescription))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Loại hàng</label>
                <div class="col-md-10">
                    <select class="form-control" name="@nameof(Model.CategoryID)">
                        <option value="">-- Chọn loại hàng --</option>
                        @foreach (var category in CommonDataService.ListOfCategories())
                        {
                            if (category.CategoryId == Model.CategoryID)
                            {
                                <option value="@category.CategoryId" selected>@category.CategoryName</option>
                            }
                            else
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" name="@nameof(Model.SupplierID)">
                        <option>-- Nhà cung cấp --</option>
                        @foreach (var supplier in CommonDataService.ListOfSuppliers())
                        {
                            if (supplier.SupplierID == Model.SupplierID)
                            {
                                <option value="@supplier.SupplierID" selected>@supplier.SupplierName</option>
                            }
                            else
                            {
                                <option value="@supplier.SupplierID">@supplier.SupplierName</option>
                            }
                        }
                    </select>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Unit)" value="@Model.Unit">
                    @Html.ValidationMessage(nameof(Model.Unit))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Price)" value="@Model.Price">
                    @Html.ValidationMessage(nameof(Model.Price))
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox" value="true" @(Model.IsSelling ? "checked" : "") name="IsSelling">Hiện đang được bán</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" src="~/images/product/@Model.Photo" class="img img-bordered" style="width:100px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Thư viện ảnh</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Ảnh</th>
                    <th>Mô tả/tiêu đề</th>
                    <th>Thứ tự hiển thị</th>
                    <th>Ẩn ảnh</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Photo/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ProductID > 0)
                {
                    @foreach (var item in ProductDataService.ListProductPhotos(Model.ProductID))
                    {
                        <tr>
                            <td style="vertical-align:middle">
                                <img src="~/images/product/@item.Photo" class="img img-bordered" style="width:100px; height:100px" />
                            </td>
                            <td style="vertical-align:middle;">@item.Description</td>
                            <td style="vertical-align:middle;">@item.DisplayOrder</td>
                            <td style="vertical-align:middle;">@(item.IsHidden ? "Hiển thị ảnh" : "Không hiển thị ảnh")</td>
                            <td style="vertical-align:middle; text-align:right">
                                <a class="btn btn-xs btn-primary" href="~/Product/Photo/@Model.ProductID?method=edit&photoId=@item.PhotoId">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="~/Product/Photo/@Model.ProductID?method=delete&photoId=@item.PhotoId" onclick="return confirm('Xóa ảnh của mặt hàng hay không?')">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Thuộc tính của mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Tên thuộc tính</th>
                    <th>Giá trị thuộc tính</th>
                    <th>Thứ tự hiển thị</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ProductID > 0)
                {
                    @foreach (var item in ProductDataService.ListAttributes(Model.ProductID))
                    {
                        <tr>
                            <td style="vertical-align:middle">@item.AttributeName</td>
                            <td style="vertical-align:middle;">@item.AttributeValue</td>
                            <td style="vertical-align:middle;">@item.DisplayOrder</td>
                            <td style="vertical-align:middle; text-align:right">
                                <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.ProductID?method=edit&attributeId=@item.AttributeID">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="~/Product/Attribute/@Model.ProductID?method=delete&attributeId=@item.AttributeID" onclick="return confirm('Xóa thuộc tính này của mặt hàng?')">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer text-center">
        <!-- Footer content if needed -->
    </div>
</div>
